{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "flowl",
	"patterns": [
		{
			"include": "#fn"
		},
		{
			"include": "#var"
		},
		{
			"include": "#assignvar"
		},
		{
			"include": "#co"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#string"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#ident"
		}
	],
	"repository": {
		"string": {
			"patterns": [{
				"name": "string.quoted.double.flowl",
				"match": "(\".*(\\\"(.*)\\\")\"|\".*\")"
			}]
		},
		"ident": {
			"match": "[\\s=+-><]*(\\w+)[\\s=+-><]*",
			"captures": {
				"1": {
					"name": "storage.type.function.flowl"
				}
			}
		},
		"var": {
			"match": "^\\s*(var)\\s+(\\w+)",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "entity.name.variable.flowl"
				}
			}
		},
		"co": {
			"match": "^\\s*(co)\\s+(\\w+)\\s*",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "entity.name.function.flowl"
				}
			}
		},
		"fn": {
			"match": "^\\s*(fn)\\s+(\\w+)\\s*=\\s*(\\w+)\\s*{.*",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "entity.name.function.flowl"
				},
				"3": {
					"name": "entity.name.function.flowl"
				}
			}
		},
		"assignvar": {
			"match": "\\s*(->)\\s+(\\w+)\\s*",
			"captures": {
				"2": {
					"name": "entity.name.variable.flowl"
				}
			}
		},
		"comment": {
			"begin": "\\s*//",
			"end": "\\n",
			"name": "comment.line.double-slash"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.flowl",
				"match": "^\\s*(for|var|args|load|co|fn)\\b"
			}]
		}
	},
	"scopeName": "source.flowl"
}