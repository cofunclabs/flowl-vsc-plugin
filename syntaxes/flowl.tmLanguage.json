{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "flowl",
	"patterns": [
		{
			"include": "#multiline"
		},
		{
			"include": "#load"
		},
		{
			"include": "#var"
		},
		{
			"include": "#run1"
		},
		{
			"include": "#run2"
		},
		{
			"include": "#fn"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		}
		
	],
	"repository": {
		"multiline": {
			"patterns": [{
				"name": "string.quoted.double.flowl",
				"match": "\\*\\*\\*"
			}]
		},
		"load": {
			"match": "^\\s*(load)\\s+(go:.*)\\s*$",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "string.quoted.double.flowl"
				}
			}
		},
		"var": {
			"match": "^\\s*(var)\\s+(\\w+).*$",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "storage.type.function.flowl"
				}
			}
		},
		"run1": {
			"match": "^\\s*(run)\\s+(\\w+)\\s*{.*",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "storage.type.function.flowl"
				}
			}
		},
		"run2": {
			"match": "^\\s*(run)\\s+(\\w+)\\s*$",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "storage.type.function.flowl"
				}
			}
		},
		"fn": {
			"match": "^\\s*(fn)\\s+(\\w+)\\s*=\\s*(\\w+)\\s*{.*",
			"captures": {
				"1": {
					"name": "keyword.control.flowl"
				},
				"2": {
					"name": "storage.type.function.flowl"
				},
				"3": {
					"name": "entity.name.function.flowl"
				}
			}
		},
		"comment": {
			"begin": "//",
			"end": "\\n",
			"name": "comment.line.double-slash"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.flowl",
				"match": "^\\s*(var|args|load|run|fn)\\b"
			}]
		}
	},
	"scopeName": "source.flowl"
}